{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./src",
    "paths": {
      "*": ["./*"],
      "@/*": ["./*"],
      "~/*": ["./*"],
      "routes/*": ["./routes/*"],
      "db/*": ["./db/*"],
      "controllers/*": ["./controllers/*"],
    },
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
